<!-- Projects -->
<div class="bg-site">
  <section id="works" class="home-section">
    <div class="container">
      <div class="row">
        <div class="col-md-offset-0 col-md-12">
          <div class="section-heading">
            <h2 class="glow black">Projects</h2>
            <p class="black glow">I've pushed a commit or two in my day...</p>
          </div>
        </div>
      </div>

      
       <!-- dynamic project layout -->
      
      <link rel="stylesheet" type="text/css" href="//cdn.jsdelivr.net/jquery.slick/1.3.7/slick.css"/>

      <script type="text/javascript" src="//cdn.jsdelivr.net/jquery.slick/1.3.7/slick.min.js"></script>  

      <div class="row">
        <% bc_projects %>
        <% @projects.each do |item| %>
        <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6" data-wow-delay="0.4s">
          <div class="bg-black-border curved-3 pad-2">
            <div class="box-team wow bounceInDown">
              <h4 class="white glow bg-dark curved-3"><%= item.project_name %></h4>
              <% unless item.project_source_url.include? "closed" %>
              <%= link_to "Source", "#{item.project_source_url}", class: "black glow" %>
              <% end %>
              <br>
              <%= link_to image_tag(item.project_img, :alt => item.project_name, class: "image-responsive max-350"), item.project_url %>
              <br/>
              <p class="black glow"><%= item.project_description %></p>
              <p class="black glow bg-dark curved-3">Primary Language: <%= item.project_feature_lang %></p>
              <p class="black glow bg-dark curved-3">Project Status: <%= item.project_state %></p>
            </div>
          </div>
        </div> 
        <% end %>        
      </div>    
    </div>
  </section>
</div>
